.navbar-header {
  background-color: #fff;
}
.navbar-header .header-logo {
  display: flex;
  align-items: center;
  justify-content: center;
}
.navbar-header .header-logo view {
  height: 20px;
  line-height: 20px;
}
.navbar-header .header-position {
  font-size: 12px;
  height: 46px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.navbar-header .header-position .inner-box {
  box-sizing: border-box;
  width: fit-content;
  padding: 0 12px;
  height: 26px;
  line-height: 26px;
  border-radius: 13px;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
}
.navbar-header .header-position .inner-box-scroll {
  box-sizing: border-box;
  width: fit-content;
  padding: 0 12px;
  height: 26px;
  line-height: 22px;
  border-radius: 11px;
  border: 2px solid #F2F3F7;
  background-color: #fff;
}
.navbar-header .header-position .icon-weizhi {
  display: inline-block;
  margin-left: 5px;
  font-size: 12px;
}
.container {
  padding: 0;
  height: 667px;
  background-color: pink;
  position: relative;
}
.container .swiper-section {
  width: 100%;
  height: 445rpx;
}
.container .swiper-section .swiper-image {
  width: 750rpx;
  height: 485rpx;
}
.container .content {
  position: absolute;
  top: 420rpx;
  left: 0;
  width: 100%;
  min-height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
  background-color: #fff;
  border-radius: 15px 15px 0 0;
  background-color: #f5f5f5;
}
.container .content .content-top {
  margin: 0 30rpx;
  width: 726rpx;
}
.container .content .content-top .vant-tab .van-tabs__nav {
  background-color: #f5f5f5 !important;
  border-radius: 15px 15px 0 0;
  overflow: hidden;
}
.container .content .content-top .vant-tab .van-tabs__wrap {
  border-radius: 15px 15px 0 0;
  overflow: hidden;
}
.container .content .content-top .vant-tab .van-tab {
  font-size: 32rpx;
}
.container .content .content-top .vant-tab .van-tab--active {
  font-weight: bold;
}
.container .content .content-bottom {
  margin: 20rpx 30rpx;
  width: 726rpx;
  height: 100px;
  background-color: #fff;
  border-radius: 15px;
}
